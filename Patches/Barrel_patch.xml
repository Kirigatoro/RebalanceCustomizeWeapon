<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Barrels -->
	<Operation Class="PatchOperationSequence">
		<operations>

			<!-- CWF_Module_ExtendedBarrel -->
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="CWF_Module_ExtendedBarrel"]/costlist</xpath>
				<value>
					<costList>
						<ComponentSpacer>1</ComponentSpacer>
	            		<Plasteel>15</Plasteel>
	            		<Uranium>1</Uranium>
					</costList>
				</value>
			</li>

			<li Class="PatchOperationReplace">
      			<xpath
				>/Defs/ThingDef[defName="CWF_Module_ExtendedBarrel"]/recipeMaker/researchPrerequisite</xpath>
         		<value>
           			<researchPrerequisites>
				          <li>Gunsmithing</li>
				          <li>BarrelUpgrades</li>
